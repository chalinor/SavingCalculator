<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtItemToPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item to Purchase:"
        android:textSize="18dp"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/editTextItemToPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_toRightOf="@id/txtItemToPurchase"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:textSize="18dp"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:layout_below="@id/txtItemToPurchase"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_toRightOf="@id/txtPrice"
        android:layout_below="@id/editTextItemToPurchase"
        android:layout_alignStart="@id/editTextItemToPurchase"
        />

    <Button
        android:id="@+id/btnCompute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compute"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="@color/buttonColor"
        android:layout_below="@id/editTextPrice"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:layout_margin="20dp"
        />

    <!--This is to demo user input processing -->
    <TextView
        android:id="@+id/txtNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value 1:"
        android:textSize="18dp"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/btnCompute"/>

    <EditText
        android:id="@+id/editTextNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_toRightOf="@id/txtItemToPurchase"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btnCompute"/>

    <TextView
        android:id="@+id/txtNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value 2:"
        android:textSize="18dp"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/txtNum1"/>

    <EditText
        android:id="@+id/editTextNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_toRightOf="@id/txtItemToPurchase"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editTextNum1"/>

    <Button
        android:id="@+id/btnSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Sum"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="@color/buttonColor"
        android:layout_below="@id/txtNum2"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:layout_margin="30dp"
        />

</RelativeLayout>